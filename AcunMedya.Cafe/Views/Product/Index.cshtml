@model List<AcunMedya.Cafe.Entities.Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}


<style>
    .card {
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        border: none;
    }

    .table thead {
        background-color: #f7f7f7;
        color: #333;
        font-weight: 600;
        border-bottom: 2px solid #ddd;
    }

    .table td, .table th {
        vertical-align: middle !important;
    }

    .btn-action {
        border-radius: 10px;
        padding: 6px 12px;
        font-size: 0.85rem;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .btn-update {
        background-color: #e6f0ff;
        color: #007bff;
        border: 1px solid #cce0ff;
    }

        .btn-update:hover {
            background-color: #d4e8ff;
        }

    .btn-delete {
        background-color: #ffe6e6;
        color: #dc3545;
        border: 1px solid #f5b4b4;
    }

        .btn-delete:hover {
            background-color: #ffdddd;
        }

    .img-rounded {
        border-radius: 50%;
        border: 2px solid #ddd;
        width: 20vw; /* ekranın %20 genişliği kadar */
        height: 20vw;
        max-width: 120px;
        max-height: 120px;
        object-fit: cover;
        object-position: center;
        background-color: #fff;
    }



</style>

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> Ürün Tablsou </h3>
        <a href="/Product/AddProduct" class="btn btn-gradient-success">
            <i class="fa fa-plus-circle"></i> Yeni Ürün Ekle
        </a>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Tablo</a></li>
                <li class="breadcrumb-item active" aria-current="page">Ürün</li>
            </ol>
        </nav>
    </div>


    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#️⃣</th>
                                <th>📝 Ürün İsmi</th>
                                <th>💸 Fiyatı</th>
                                <th>🧾 Açıklaması</th>
                                <th>🖼️ Resmi</th>
                                <th>📂 Kategorisi</th>
                                <th>✏️ Güncelle</th>
                                <th>🗑️ Sil</th>
                            </tr>

                        </thead>
                        <tbody>
                    @if (Model != null && Model.Any()){
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.ProductName</td>
                                    <td>@item.ProductPrice</td>
                                    <td>@item.Description</td>
                                        <td>
                                            <img src="@item.ImageUrl" class="img-rounded" />
                                        </td>
                                    <td>@item.Category.CategoryName</td>
                                    <td>
                                        <a href="/Product/UpdateProduct/@item.ProductId" class="btn  btn-gradient-warning">
                                            <i class="fa fa-edit"></i> Güncelle
                                        </a>
                                    </td>
                                    <td>
                                        <a onclick="deleteProduct(@item.ProductId)" class="btn  btn-gradient-danger">
                                            <i class="fa fa-trash"></i> Sil
                                        </a>
                                    </td>
                                    @* <td><a href="/Product/DeleteProduct/@item.ProductId" class="badge badge-danger">Sil</a></td> *@
                                </tr>
                            }
                        }
                            else
                            {
                                <p>Model boş veya null</p>
                            }
                          

                        </tbody>
                    </table>
                  
                </div>
            </div>
        </div>

    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    function deleteProduct(id) {
        Swal.fire({
            title: "Silmek istediğinizden emin misiniz?",
            text: "Bu işlemleri geri alamazsınız !",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet,Sil!",
            cancelButtonText:"İptal"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Product/DeleteProduct/" + id;
            }
        });
    }
</script>